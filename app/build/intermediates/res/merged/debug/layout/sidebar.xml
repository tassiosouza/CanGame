<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sidebar"
    android:layout_width="250dp"
    android:layout_height="fill_parent"
    android:layout_gravity="start"
    android:background="#ffffff"
    android:paddingLeft="0dp"
    android:paddingRight="0dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relativeLayout1" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical|center_horizontal" >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bg_side_top_not_blur" />
                </RelativeLayout>

                <Button
                    android:id="@+id/btn_pacientes"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/shape_button_sidebar"
                    android:drawableRight="@drawable/side_icon_pacientes"
                    android:gravity="right|center_vertical"
                    android:onClick="onOptionClicked"
                    android:text="@string/pacientes_cadastrados"
                    android:textColor="#7e7e7e"
                    android:drawablePadding="5dip"
                    android:layout_marginRight="10px"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn_pecs"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/shape_button_sidebar"
                    android:drawableRight="@drawable/side_icon_pecs"
                    android:gravity="right|center_vertical"
                    android:onClick="onOptionClicked"
                    android:text="PECS   "
                    android:textColor="#7e7e7e"
                    android:layout_marginRight="10px"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn_rotinas"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/shape_button_sidebar"
                    android:drawableRight="@drawable/side_icon_rotina"
                    android:gravity="right|center_vertical"
                    android:onClick="onOptionClicked"
                    android:text="@string/rotinas_str"
                    android:textColor="#7e7e7e"
                    android:drawablePadding="5dip"
                    android:layout_marginRight="10px"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn_categorias"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/shape_button_sidebar"
                    android:drawableRight="@drawable/side_icon_categorias"
                    android:gravity="right|center_vertical"
                    android:onClick="onOptionClicked"
                    android:text="@string/categorias"
                    android:textColor="#7e7e7e"
                    android:drawablePadding="5dip"
                    android:layout_marginRight="10px"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn_avaliacao"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/shape_button_sidebar"
                    android:drawableRight="@drawable/side_icon_categorias"
                    android:gravity="right|center_vertical"
                    android:onClick="onOptionClicked"
                    android:text="Avaliação"
                    android:textColor="#7e7e7e"
                    android:drawablePadding="5dip"
                    android:layout_marginRight="10px"
                    android:textSize="12sp" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/shape_bg_bottom_side"
        android:gravity="bottom" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_informacoes"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="@drawable/shape_button_sidebar"
                android:drawableRight="@drawable/side_icon_info"
                android:gravity="right|center_vertical"
                android:onClick="onOptionClicked"
                android:text="@string/inrormacoes_str"
                android:textColor="#7e7e7e"
                android:drawablePadding="5dip"
                android:layout_marginRight="10px"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_config"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="@drawable/shape_button_sidebar"
                android:drawableRight="@drawable/side_icon_config"
                android:gravity="right|center_vertical"
                android:onClick="onOptionClicked"
                android:text="@string/configuracao"
                android:textColor="#7e7e7e"
                android:drawablePadding="5dip"
                android:layout_marginRight="10px"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout><!-- From: file:/Users/Tassio/Documents/CanGame/app/src/main/res/layout/sidebar.xml -->